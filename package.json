    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.2.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.18.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "superagent": "^7.1.1",
    "supertest": "^6.2.2"
